<?xml version="1.0" encoding="UTF-8"?>
<project basedir="." name="JAVA_SAMPLE" default="build">

    <!--==================================
      Property for build tasks
    ===================================-->
    <property name="src.dir"   value="${basedir}/src"/>
    <property name="dest.dir"  value="${basedir}/bin"/>

    <!--==================================
      target for compile and jar
    ===================================-->
    <target name="build">
        <mkdir dir="${dest.dir}"/>
        <javac encoding="UTF-8" srcdir="${src.dir}" destdir="${src.dir}/" includeantruntime="false"/>
        <jar basedir="${src.dir}/" destfile="${dest.dir}/sample.jar"/>
    </target>

</project>
